<style>
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
    border: none; /* Remove default button border */
  }
  .btn-search:hover {
    background-color: #e63946; /* Slightly darker shade for hover effect */
    color: #fff;
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp{
   border-radius :25px; ;
   padding: 0.5rem 2rem 0.5rem 2rem;
  }
  .navbar {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for navbar */
  }
  .navbar-brand {
    font-size: 1.5rem;
    color: #fe424d;
  }
  .navbar-brand i {
    margin-right: 0.5rem;
  }
  .nav-link {
    color: #333; /* Neutral color for links */
    font-weight: bold;
  }
  .nav-link:hover {
    color: #fe424d; /* Brand color for hover effect */
  }
</style>

<nav class="navbar navbar-expand-md bg-body-tertiary border-bottom sticky-top">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i> Explore
    </a>

    <!-- Toggler Button -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Links -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- Search Bar -->
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 search-inp" type="search" placeholder="Search destinations" aria-label="Search">
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <!-- User Links -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Add New Listing</a>
        <% if (!currUser) { %> 
          <a class="nav-link" href="/signup">
            <i class="fa-solid fa-user"></i> <b>Sign Up</b>
          </a>
          <a class="nav-link" href="/login">
            <i class="fa-solid fa-sign-in-alt"></i> <b>Login</b>
          </a>
        <% } else { %>
          <a class="nav-link" href="/logout">
            <i class="fa-solid fa-sign-out-alt"></i> <b>Log Out</b>
          </a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
